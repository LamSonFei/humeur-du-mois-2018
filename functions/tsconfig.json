{
  "compilerOptions": {
    "lib": ["es6", "es2016"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "typeRoots": ["@types"],
    "plugins": [
      { "transform": "typescript-is/lib/transform-inline/transformer" },
    ]
  },
  "compileOnSave": true,
  "include": ["src"]
}
